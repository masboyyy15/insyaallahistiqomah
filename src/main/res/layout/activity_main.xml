<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/imanislam"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_jadwal_sholat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_jadwal_sholat"
                android:src="@drawable/sholat"
                android:layout_width="75dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_jadwal_sholat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/iv_jadwal_sholat"
                android:gravity="center_vertical"
                android:text="jadwal sholat"
                android:textSize="25sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_produk_halal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_produk_halal"
                android:src="@drawable/halal"
                android:layout_width="75dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_produk_halal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/iv_produk_halal"
                android:text="produk halal"
                android:textSize="25sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_doa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_doa"
                android:src="@drawable/doa"
                android:layout_width="75dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_doa"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/iv_doa"
                android:text="doa harian"
                android:textSize="25sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>